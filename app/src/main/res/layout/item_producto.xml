<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_border"
    android:padding="8dp"
    android:paddingLeft="10dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_imagenProducto"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
         />

    <TextView
        android:id="@+id/tv_nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Portátil Acer Gaming Nitro V 15..."
        android:textSize="12sp"
        android:maxLines="2" />

    <TextView
        android:id="@+id/tv_precioProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="999$"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tv_valoracionProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificación 4/5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_opinionesProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 opiniones"
        android:textSize="12sp" />

</LinearLayout>
